<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <img src="/assets/images/logos/SpencerMills_Logo.svg" alt="Spencer Mills Orthodox Presbyterian Church" class="h-12 sm:h-14 w-auto">
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center">
        <a href="/" class="px-4 text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/' %} text-spruce{% endif %}">Home</a>
        <a href="/beliefs/" class="px-4 text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/beliefs/' %} text-spruce{% endif %}">Beliefs</a>
        <a href="/sermons/" class="px-4 text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/sermons/' %} text-spruce{% endif %}">Sermons</a>
        <a href="/leadership/" class="px-4 text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/leadership/' %} text-spruce{% endif %}">Leadership</a>
        <a href="/the-opc/" class="px-4 text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/the-opc/' %} text-spruce{% endif %}">The OPC</a>
        <a href="/contact/" class="px-4 text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/contact/' %} text-spruce{% endif %}">Contact</a>
        <a href="/give/" class="px-4 text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/give/' %} text-spruce{% endif %}">Give</a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="lg:hidden p-2 text-navy hover:text-spruce transition-colors" aria-label="Toggle menu" aria-expanded="false">
        <svg class="size-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="lg:hidden hidden pb-6">
      <div class="flex flex-col gap-4 pt-4 border-t border-gray-200">
        <a href="/" class="text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/' %} text-spruce{% endif %}">Home</a>
        <a href="/beliefs/" class="text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/beliefs/' %} text-spruce{% endif %}">Beliefs</a>
        <a href="/sermons/" class="text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/sermons/' %} text-spruce{% endif %}">Sermons</a>
        <a href="/leadership/" class="text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/leadership/' %} text-spruce{% endif %}">Leadership</a>
        <a href="/the-opc/" class="text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/the-opc/' %} text-spruce{% endif %}">The OPC</a>
        <a href="/contact/" class="text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/contact/' %} text-spruce{% endif %}">Contact</a>
        <a href="/give/" class="text-sm uppercase tracking-widest text-navy hover:text-spruce transition-colors{% if page.url == '/give/' %} text-spruce{% endif %}">Give</a>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu Script -->
  <script>
    document.getElementById('mobile-menu-btn').addEventListener('click', function() {
      const menu = document.getElementById('mobile-menu');
      const isHidden = menu.classList.contains('hidden');
      menu.classList.toggle('hidden');
      this.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
    });
  </script>
</header>
